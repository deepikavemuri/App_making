<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/destination"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ubuntu.app1.basic"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_basic">


    <TextView
        android:id="@+id/from"
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:text="From"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/from_place"
        android:layout_width="253dp"
        android:layout_height="43dp"
        android:textAlignment="gravity
"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout4"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="140dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/from_place"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:inputType="text"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="104dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/from"
        android:layout_alignParentEnd="true"
        android:text="To"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/from"
        tools:layout_editor_absoluteX="16dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="252dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout5"
        app:layout_constraintTop_toBottomOf="@+id/from_place"
        tools:layout_editor_absoluteX="151dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/to_place"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:contentDescription="characters"
            android:inputType="text"
            android:textAlignment="gravity"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="234dp"
        android:layout_height="32dp"
        android:contentDescription="@string/action_settings"
        android:text="Number of People"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColorLink="@android:color/holo_blue_dark"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="228dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="126dp"
        android:layout_height="34dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout6"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
        tools:layout_editor_absoluteX="257dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:inputType="number"
            android:textAlignment="gravity"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="199dp"
        android:layout_height="39dp"
        android:text="Number of  Days"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="16dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="153dp"
        android:layout_height="34dp"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="292dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:contentDescription="numbers"
            android:inputType="number"
            android:textAlignment="gravity"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="390dp" />

</android.support.constraint.ConstraintLayout>
